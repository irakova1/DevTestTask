<%= turbo_stream_from "tasks" %>
<div class="row space-between" style="margin: 20px">
  <h1 class='heading'>Task List</h1>
  <%= link_to "New task", new_task_path, class: "add-button",  data: { turbo_frame: "modal" } %>
</div>
<p class="notice"><%= notice %></p>
<div id="tasks" class='row'>
  <% @tasks.each do |task| %>
    <turbo-stream action="prepend" target="tasks">
        <template>
            <div id="<%= dom_id task%>" >
        
                <%= render partial: 'card', locals: { task: task } %>
            </div>
    
        </template>
    </turbo-stream>
  <% end %>
</div>